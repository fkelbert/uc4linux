<controlMechanism>
  <id>EncryptFileContainer(open)</id>
  <description>
    Encrypt File /home/neisse/test/secret.txt
  </description>
  <triggerEvent xmlns="http://www.master-fp7.eu/event">
    <id>open</id>
    <parameter name="user" value="neisse"/>
    <parameter name="filename" value="/home/neisse/test/secret.txt" type="dataUsage"/>
  </triggerEvent>
  <condition xmlns="http://www.master-fp7.eu/pastOSL">
	<true/>
  </condition>
  <actions>
    <allow/>
    <execute>
      <action>
        <id>encryptOpen</id>
      </action>
    </execute>
  </actions>  
</controlMechanism>


