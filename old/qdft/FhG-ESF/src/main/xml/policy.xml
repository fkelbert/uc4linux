<?xml version="1.0" encoding="UTF-8"?>
<policySet 
  xmlns              = "http://www.iese.fhg.de/esf/1.0/enforcementLanguage"
  xmlns:event        = "http://www.iese.fhg.de/esf/1.0/event"
  xmlns:a            = "http://www.iese.fhg.de/esf/1.0/action"
  xmlns:el           = "http://www.iese.fhg.de/esf/1.0/enforcementLanguage"
  xmlns:xsi          = "http://www.w3.org/2001/XMLSchema-instance"
  
  xsi:schemaLocation="
    http://www.iese.fhg.de/esf/1.0/action action-FhG.xsd
    http://www.iese.fhg.de/esf/1.0/event event-FhG.xsd
    http://www.iese.fhg.de/esf/1.0/enforcementLanguage enforcementLanguage-FhG.xsd">
    
  <!-- Whenever condition is violated the action is triggered -->
  <detectiveMechanism name="Reactive1" xmlns="http://www.iese.fhg.de/esf/1.0/enforcementLanguage">
    <description>Alarm when not ack</description>
    <timestep amount="1" unit="MINUTES"/>
    <condition>
      <and>
        <before amount="6">
          <eventMatch action="QueryDebtorRequest">
            <event:paramMatch name="alreadyRequested" value="false"/>
          </eventMatch>
        </before>
        <within amount="6">
          <eventMatch action="Ack"/>
        </within>
      </and>
    </condition>
    <action name="Alarm"/>
  </detectiveMechanism>

  </policySet>

